<nav class = "navbar  navbar-expand navbar-light bg-light">
     <div class = "collapse navbar-collapse" id = "navbarSupportedContent">
            Create New Task
     </div>
  </nav>
  <div class = "container-fluid">
    <div class = "row">
        <div class = "form-box mx-auto col-md-6" style = "text-align:center">
           Form for tasks
           <%= form_with { |form| %>
           <% if @task.errors.any? %>
            <div class = "alert alert-danger">
                <%= @task.errors.full_messages[0] %>
            </div>
            <% end %>
            <div class = "form-group">
                <%= form.label :title%>
                <%= form.text_field  :title, class:"form-control", placeholder: "Enter Task Title" %>
            </div>

             <div class = "form-group">
                <%= form.label :summary%>
                <%= form.text_area :summary, class:"form-control", placeholder: "Enter Task summary", rows: 9 %>
            </div>
            <div class = "form-group">
                <%= form.submit :submit, class: "btn btn-primary" %>
            <% } %>
        </div>
    </div>
  </div>