<nav class = "navbar  navbar-expand navbar-light bg-light">
     <div class = "collapse navbar-collapse" id = "navbarSupportedContent">
            Register New Account
     </div>
  </nav>
  <div class = "container-fluid">
    <div class = "row">
        <div class = "form-box mx-auto col-md-6" style = "text-align:center">
            Create New Account - <i>Rails Todo App</i> 
            <%= form_with { |form| %>
                <% if @user.errors.any? %>
                     <%= @user.errors.full_messages[0] %> 
                <% end %>
                 <div class = "form-group">
                    <%= form.label :username %>
                    <%= form.text_field :username, class:"form-control", value: params[:username] %>
                </div>
                 <div class = "form-group">
                    <%= form.label :password%>
                    <%= form.password_field :password, class: "form-control", value: params[:password]%>
                </div>
                <%= form.submit :submit, class: "btn btn-primary" %>
            <% } %>
        </div>
    </div>
  </div>