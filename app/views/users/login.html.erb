<nav class = "navbar  navbar-expand navbar-light bg-light">
     <div class = "collapse navbar-collapse" id = "navbarSupportedContent">
            Login
     </div>
  </nav>
  <div class = "container-fluid">
    <div class = "row">
        <div class = "form-box mx-auto col-md-6" style = "text-align:center">
            Create New Login - <i>Rails Todo App</i> 
            <% if @error %>
            <div class = "alert alert-danger" role = "alert">
                <%= @error %>
            </div>
            <% end %>
          <%= form_with { |form| %>
            <div class = "form-group">
                <%= form.label :username %>
                <%= form.text_field :username, class: "form-control", placeholder:"Enter username", value: params[:username]%>
            </div>
             <div class = "form-group">
                <%= form.label :password %>
                <%= form.password_field :password, class: "form-control", placeholder:"Enter password", value: params[:password]%>
            </div>
            <div class = "form-group">
                <%= form.submit :login, class: "btn btn-primary" %>
            </div>
            <% } %>
        </div>
    </div>
  </div>